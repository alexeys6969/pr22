             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Phonebook_Shashin.Elements"
             mc:Ignorable="d" >
    <Border x:Name="border" Opacity="1" Margin="10,10,10,10" Height="80" CornerRadius="7,7,7,7">
