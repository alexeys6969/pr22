<Page x:Class="Phonebook_Shashin.Pages.Filter"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Phonebook_Shashin.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="550" d:DesignWidth="700"
      Title="Filter">

    <Border CornerRadius="10,0,0,0">
        <Border.Background>
            <SolidColorBrush Color="White" Opacity="1.0"/>
        </Border.Background>
        <Grid>
            <Grid.Resources>
                <ResourceDictionary Source="/Resource/BtnRes.xaml"/>
            </Grid.Resources>

            <ScrollViewer x:Name="scroll_user">
                <Border Name="Info_user" MinHeight="530">
                    <Grid>
                        <Label Content="Фильтры" Margin="39,28,26,0" Foreground="Black" FontSize="30" FontFamily="Copperplate Gothic" FontWeight="SemiBold" HorizontalContentAlignment="Left" Height="52" VerticalAlignment="Top"/>

                        <Label Content="Начало звонка" Margin="39,100,232,0" Foreground="Black" FontSize="15" FontFamily="Copperplate Gothic" FontWeight="UltraLight" HorizontalContentAlignment="Left" Height="29" VerticalAlignment="Top"/>
                        <Grid Margin="30,114,126,384">
                            <DatePicker Style="{StaticResource styleDatePicker}" x:Name="date_start_call" Height="35" Margin="9,10,214,0" VerticalAlignment="Top" FontFamily="Copperplate Gothic" FontSize="14"/>
                        </Grid>

                        <Label Content="Конец звонка" Margin="39,170,232,0" Foreground="Black" FontSize="15" FontFamily="Copperplate Gothic" FontWeight="UltraLight" HorizontalContentAlignment="Left" Height="29" VerticalAlignment="Top"/>
                        <Grid Margin="30,184,126,313">
                            <DatePicker Style="{StaticResource styleDatePicker}" x:Name="date_end_call" Height="35" Margin="9,10,214,0" VerticalAlignment="Top" FontFamily="Copperplate Gothic" FontSize="14"/>
                        </Grid>

                        <Label Content="Номер" Margin="39,252,232,0" Foreground="Black" FontSize="15" FontFamily="Copperplate Gothic" FontWeight="UltraLight" HorizontalContentAlignment="Left" Height="29" VerticalAlignment="Top"/>
                        <ComboBox x:Name="num_select" FontFamily="Copperplate Gothic" Margin="39,275,246,0" Height="30" VerticalAlignment="Top" FontSize="14"></ComboBox>

                        <Label Content="Категория звонка" Margin="39,322,232,0" Foreground="Black" FontSize="15" FontFamily="Copperplate Gothic" FontWeight="UltraLight" HorizontalContentAlignment="Left" Height="29" VerticalAlignment="Top"/>
                        <ComboBox x:Name="category_select" FontFamily="Copperplate Gothic" Margin="39,345,246,0" Height="30" VerticalAlignment="Top" FontSize="14"></ComboBox>

                        <Button Style="{StaticResource BtnRedac}" Margin="0,0,136.2,24" VerticalAlignment="Bottom" Height="40" HorizontalAlignment="Right" Width="105" Click="Click_Call_Redact">
                            <Image Source="/img/redac.png" Width="20" Height="20"/>
                        </Button>

                        <Button x:Name="btn_cancel" Style="{StaticResource BtnRedac}" Background="#FFE48F2B" Margin="30,0,0,23.6" VerticalAlignment="Bottom" Height="40" HorizontalAlignment="Right" Width="105" Click="Click_Cancel_Call_Redact">
                            <Image Source="/img/back.png" Width="20" Height="20"/>
                        </Button>
                    </Grid>
                </Border>
            </ScrollViewer>
        </Grid>
    </Border>
</Page>
